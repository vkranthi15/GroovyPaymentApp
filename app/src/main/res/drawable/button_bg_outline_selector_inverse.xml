<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/edit_text_stroke" />
            <solid android:color="@color/disabled" />
        </shape>
    </item>

    <!-- Selected -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@color/edit_text_stroke" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@color/edit_text_stroke" />
                    <solid android:color="@color/selected_transparent_highlight" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@color/edit_text_stroke" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@color/edit_text_stroke" />
                    <solid android:color="@color/transparent_highlight" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item android:drawable="@drawable/button_bg_outline_default_state" />
</selector>
